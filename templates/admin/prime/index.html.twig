{% extends 'base.html.twig' %}

{% block title %}Liste Primes{% endblock %}

{% block body %}
<main id="main" class="main">


    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Liste des primes</h5>
              <p>Ce tableau récapitule toutes les informations sur chaque prime.</p>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">Description</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Poste</th>
                     <th scope="col"><i class='ri-ball-pen-fill'></i></th>
                    <th scope="col"><i class='ri-delete-bin-2-fill'></i></th>
                  </tr>
                </thead>
                <tbody>
                {% for prime in primes %}
                  <tr>
                    <td>{{ prime.libelle }}</td>
                    <td>{{ prime.montant }} fcfa</td>
                    <td>
                {% for primedetail in prime.poste %}
                    {{ primedetail.poste }} ,
                {% endfor %}
                </td>
                <td><a onclick=" return confirm('Voulez-vous Vraiment modifier cette prime 👏👏 ?')" style="color: blue;" href="{{path('app_admin_prime_edit', { id: prime.id })}}"><i class="ri-ball-pen-line"></i></a></td>
                <td><a onclick=" return confirm('Voulez-vous Vraiment supprimer cette prime 👏👏 ?')" style="color: red;" href="{{path('app_admin_prime_delete', { id: prime.id })}}"><i class="ri-delete-bin-6-line"></i></a></td>
                  </tr>
                     {% else %}
                         <tr>
                            <td colspan="7">
                             <div class="col-md-12 mx-auto mt-2">
                                 <div class="alert alert-info alert dimissible fade show">
                                     Aucune prime n'est disponible 😎😎😎😎
                                 </div>
                             </div>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}

