{% extends 'base.html.twig' %}

{% block title %}Modifier poste{% endblock %}

{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Formulaire Poste</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Acceuil</a></li>
          <li class="breadcrumb-item">gestion personnel</li>
          <li class="breadcrumb-item active">Poste</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Formulaire de modification du Poste</h5>
              <!-- Vertical Form -->
              {{ form_start(form) }}
                <div class="col-12">
                  {{ form_row(form.poste, {'attr':{'class': 'form-control'}}) }}
                </div>
                <div class="col-12">
                  {{ form_row(form.salaire, {'attr':{'class': 'form-control'}}) }}
                </div><br/>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
              {{ form_end(form) }}
            </div>
          </div>
        </div>
      </div>
    </section>

  </main><!-- End #main -->

{% endblock %}
