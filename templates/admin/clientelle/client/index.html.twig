{% extends 'base.html.twig' %}

{% block title %}Liste clients{% endblock %}

{% block body %}
<main id="main" class="main">


    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Liste des Clients</h5>
              <p>Ce tableau récapitule toutes les informations sur chaque Client.</p>
                {% include "_partials/_flashmessage.html.twig" %}

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col"><i class='ri-ball-pen-fill'></i></th>
                    <th scope="col"><i class='ri-delete-bin-2-fill'></i></th>
                  </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                  <tr>
                    <th scope="row">{{ client.id }}</th>
                    <td>{{ client.nom }}</td>
                    <td>{{ client.prenom }}</td>
                    <td>{{ client.adresse }}</td>
                    <td>{{ client.telephone}}</td>
                     <td><a onclick=" return confirm('Voulez-vous Vraiment modifier ce  client 👏👏 ?')" style="color: blue;" href="{{path('app_admin_clientelle_client_edit', { id: client.id })}}"><i class="ri-ball-pen-line"></i></a></td>
                     <td><a onclick=" return confirm('Voulez-vous Vraiment supprimer ce client 👏👏 ?')" style="color: red;" href="{{path('app_admin_clientelle_client_delete', { id: client.id })}}"><i class="ri-delete-bin-6-line"></i></a></td>

                  </tr>
                     {% else %}
                        <tr>
                            <td colspan="7">
                             <div class="col-md-12 mx-auto mt-2">
                                 <div class="alert alert-info alert dimissible fade show">
                                     Aucun client 😎😎😎😎
                                 </div>
                             </div>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}

