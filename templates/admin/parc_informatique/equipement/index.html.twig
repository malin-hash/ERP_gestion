{% extends 'base.html.twig' %}

{% block title %}Equipement index{% endblock %}

{% block body %}
    <h1>Equipement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.id }}</td>
                <td>{{ equipement.nom }}</td>
                <td>{{ equipement.date ? equipement.date|date('Y-m-d') : '' }}</td>
                <td>{{ equipement.price }}</td>
                <td>{{ equipement.quantity }}</td>
                <td>
                    <a href="{{ path('app_admin_parc_informatique_equipement_show', {'id': equipement.id}) }}">show</a>
                    <a href="{{ path('app_admin_parc_informatique_equipement_edit', {'id': equipement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_parc_informatique_equipement_new') }}">Create new</a>
{% endblock %}
