{% extends 'base.html.twig' %}

{% block title %}Liste materiels{% endblock %}

{% block body %}
<main id="main" class="main">


    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Liste du Matériel Informatique</h5>
              <p>Ce tableau récapitule toutes les informations sur chaque employé.</p>
                {% include "_partials/_flashmessage.html.twig" %}

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">Nom matériel</th>
                    <th scope="col">Date d'achat</th>
                    <th scope="col">Prix Unitaire</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Capacité Disque</th>
                    <th scope="col">Capacité Ram</th>
                    <th scope="col">Core</th>
                    <th scope="col">Système</th>
                    <th scope="col">Génération</th>
                    <th scope="col">Marque</th>
                    <th scope="col"><i class='ri-ball-pen-fill'></i></th>
                    <th scope="col"><i class='ri-delete-bin-2-fill'></i></th>
                  </tr>
                </thead>
                <tbody>
                {% for materiel in materiels %}
                  <tr>
                    <td>{{ materiel.nom }}</td>
                    <td>{{ materiel.datebuy|date('d/m/Y') }}</td>
                    <td>{{ materiel.prix }} fcfa</td>
                    <td>{{ materiel.quantite}}</td>
                    <td>{{ materiel.disque }} Giga Octet</td>
                    <td>{{ materiel.rame }} Giga Octet</td>
                    <td>{{ materiel.core}} </td>
                    <td>{{ materiel.systeme}} </td>
                    <td>{{ materiel.generation}} </td>
                    <td>{{ materiel.type.nom}} </td>
                     <td><a onclick=" return confirm('Voulez-vous Vraiment modifier ce  materiel 👏👏 ?')" style="color: blue;" href="{{path('app_admin_parc_informatique_materiel_edit', { id: materiel.id })}}"><i class="ri-ball-pen-line"></i></a></td>
                     <td><a onclick=" return confirm('Voulez-vous Vraiment supprimer ce materiel 👏👏 ?')" style="color: red;" href="{{path('app_admin_parc_informatique_materiel_delete', { id: materiel.id })}}"><i class="ri-delete-bin-6-line"></i></a></td>
              
                  </tr>
                     {% else %}
                        <tr>
                            <td colspan="7">
                             <div class="col-md-12 mx-auto mt-2">
                                 <div class="alert alert-info alert dimissible fade show">
                                     Aucun materiel 😎😎😎😎
                                 </div>
                             </div>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}

