{% extends 'base.html.twig' %}

{% block title %}Liste ordinateurs{% endblock %}

{% block body %}
<main id="main" class="main">


    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Liste des ordinateurs</h5>
              <p>Ce tableau récapitule toutes les informations sur chaque ordinateur.</p>
                {% include "_partials/_flashmessage.html.twig" %}

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">Nom ordinateur</th>
                    <th scope="col">Type du Materiel</th>
                    <th scope="col">Génération</th>
                    <th scope="col">Marque</th>
                    <th scope="col">Système</th>
                    <th scope="col">Core</th>
                    <th scope="col"><i class='ri-ball-pen-fill'></i></th>
                    <th scope="col"><i class='ri-delete-bin-2-fill'></i></th>
                  </tr>
                </thead>
                <tbody>
                {% for ordinateur in ordinateurs %}
                  <tr>
                    <td>{{ ordinateur.nom}}</td>
                    <td>{{ ordinateur.type.materiel}}</td>
                    <td>{{ ordinateur.generation.nom}}</td>
                    <td>{{ ordinateur.marque.nom}}</td>
                    <td>{{ ordinateur.systeme.nom}}</td>
                    <td>{{ ordinateur.core}}</td>
                     <td><a onclick=" return confirm('Voulez-vous Vraiment modifier cette  ordinateur 👏👏 ?')" style="color: blue;" href="{{path('app_admin_parc_informatique_ordinateur_edit', { id: ordinateur.id })}}"><i class="ri-ball-pen-line"></i></a></td>
                     <td><a onclick=" return confirm('Voulez-vous Vraiment supprimer cette ordinateur 👏👏 ?')" style="color: red;" href="{{path('app_admin_parc_informatique_ordinateur_delete', { id: ordinateur.id })}}"><i class="ri-delete-bin-6-line"></i></a></td>
              
                  </tr>
                     {% else %}
                        <tr>
                            <td colspan="7">
                             <div class="col-md-12 mx-auto mt-2">
                                 <div class="alert alert-info alert dimissible fade show">
                                     Aucun ordinateur 😎😎😎😎
                                 </div>
                             </div>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}

